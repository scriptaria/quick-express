{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "target": "es2018",
    "paths": {
      "src/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "src/core/cli.ts",
    "src/**/*spec.ts",
    "src/**/*test.ts",
  ],
  "include": [
    "src/**/*.ts",
  ],
}